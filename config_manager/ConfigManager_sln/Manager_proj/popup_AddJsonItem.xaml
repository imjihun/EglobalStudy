<Window x:Class="Manager_proj.popup_AddJsonItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manager_proj"
        mc:Ignorable="d"
        Title="popup_AddJsonItem" Height="100" Width="300"
        WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"  ResizeMode="NoResize">
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="MyBoolToVisibilityConverter"/>
	</Window.Resources>
	<Grid>
		<Border Margin="10">
			<Border.Effect>
				<DropShadowEffect Color="Gray"
                              Direction="270"
                              BlurRadius="10"
                              ShadowDepth="1" />
			</Border.Effect>
			<Grid Background="White" />
		</Border>
		<Grid Margin="10">
			<!--<RadioButton x:Name="radioButton_jvalue" GroupName="type" Content="jvalue"
						 Margin="5,5,0,0" IsChecked="True"
						 HorizontalAlignment="Left" VerticalAlignment="Top"/>
			<RadioButton x:Name="radioButton_jobject" GroupName="type" Content="jobject" 
						 Margin="70,5,0,0"
						 HorizontalAlignment="Left" VerticalAlignment="Top"/>
			<RadioButton x:Name="radioButton_jarray" GroupName="type" Content="jarray" 
						 Margin="135,5,0,0"
						 HorizontalAlignment="Left" VerticalAlignment="Top"/>


			<Grid Visibility="{Binding ElementName=radioButton_jvalue, Path=IsChecked, Converter={StaticResource MyBoolToVisibilityConverter}}">-->
			<Grid >
					<TextBlock Text="key"
								   VerticalAlignment="Center" HorizontalAlignment="Center"
								   Margin="0, 0, 120, 0" Height="20" Width="100"
								   Foreground="LightSteelBlue" Visibility="{Binding ElementName=textBox_key, Path=Text.IsEmpty, Converter={StaticResource MyBoolToVisibilityConverter}}" FontStyle="Italic" TextDecorations="{x:Null}"/>
				<TextBox x:Name="textBox_key" Background="{x:Null}"
								 VerticalAlignment="Center" HorizontalAlignment="Center"
								 Margin="0, 0, 120, 0" Width="100" Height="20" />

				<!--<TextBlock Text="value"
								   VerticalAlignment="Center" HorizontalAlignment="Center"
								   Margin="120, 0, 0, 0" Height="20" Width="100"
								   Foreground="LightSteelBlue" Visibility="{Binding ElementName=textBox_value, Path=Text.IsEmpty, Converter={StaticResource MyBoolToVisibilityConverter}}" FontStyle="Italic" TextDecorations="{x:Null}"/>
				<TextBox x:Name="textBox_value" Background="{x:Null}"
								 VerticalAlignment="Center" HorizontalAlignment="Center"
								 Margin="120, 0, 0, 0" Width="100" Height="20" />-->
				<ComboBox x:Name="comboBox_type" Background="White" BorderBrush="White" Foreground="Black"
								 Margin="120, 0, 0, 0" Width="100" Height="20"  HorizontalAlignment="Center" VerticalAlignment="Center">
					<ComboBoxItem Content="JValue" IsSelected="true" ></ComboBoxItem>
					<ComboBoxItem Content="JObject"></ComboBoxItem>
					<ComboBoxItem Content="JArray"></ComboBoxItem>
				</ComboBox>

			</Grid>
			<Button x:Name="btn_ok" Content="ok" Background="White"
					Margin="5,5,60,5" Width="50" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
			<Button x:Name="btn_cancel" Content="cancel" Background="White"
					Margin="5,5,5,5" Width="50" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Button>
		</Grid>
		<Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="500,52,-300,0" VerticalAlignment="Top" Width="100"/>
	</Grid>
</Window>
