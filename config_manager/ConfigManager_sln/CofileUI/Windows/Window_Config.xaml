<Window x:Class="CofileUI.Windows.Window_Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CofileUI.Windows"
		
		xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		
        mc:Ignorable="d"
        AllowsTransparency="True"  Height="600" Width="800"
		Title="Window_Config"
        WindowStyle="None" Background="Transparent"  ResizeMode="NoResize">
	<Grid>
		<Border Margin="10">
			<Border.Effect>
				<DropShadowEffect Color="Gray"
                              Direction="270"
                              BlurRadius="10"
                              ShadowDepth="1" />
			</Border.Effect>

			<Grid Background="White" >
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="40"/>
				</Grid.RowDefinitions>
				<Grid x:Name="grid">
				</Grid>
				<Grid Grid.Row="1">
					<Button HorizontalAlignment="Right" Margin="0,5,115,5" Width="100" Content="Ok" Click="OnClickOkButton"></Button>
					<Button HorizontalAlignment="Right" Margin="0,5,10,5" Width="100" Content="Cancel" Click="OnClickCancelButton"></Button>
				</Grid>
			</Grid>
		</Border>
	</Grid>
</Window>
