		<local:Int64ToStringConverter x:Key="Int64ToStringConverter"/>
		<Style x:Key="StyleDataGrid" BasedOn="{StaticResource MetroDataGrid}" TargetType="{x:Type DataGrid}">
			<Setter Property="AlternatingRowBackground" Value="{DynamicResource GrayBrush10}" />
			<Setter Property="AutoGenerateColumns" Value="False" />
			<Setter Property="GridLinesVisibility" Value="All"/>
		</Style>

		<DataGrid x:Key="DataGridResourceSamColVar" Style="{StaticResource StyleDataGrid}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="item" Binding="{Binding item}"/>
				<Controls:DataGridNumericUpDownColumn Header="column_pos" Binding="{Binding column_pos, Converter={StaticResource Int64ToStringConverter}}"/>
				<DataGridTextColumn Header="wrap_char" Binding="{Binding wrap_char}"/>
			</DataGrid.Columns>
		</DataGrid>
		<DataGrid x:Key="DataGridResourceSamColFix" Style="{StaticResource StyleDataGrid}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="item" Binding="{Binding item}"/>
				<Controls:DataGridNumericUpDownColumn Header="start_pos" Binding="{Binding start_pos, Converter={StaticResource Int64ToStringConverter}}"/>
				<Controls:DataGridNumericUpDownColumn Header="size" Binding="{Binding size, Converter={StaticResource Int64ToStringConverter}}"/>
				<Controls:DataGridNumericUpDownColumn Header="col_size" Binding="{Binding col_size, Converter={StaticResource Int64ToStringConverter}}"/>
			</DataGrid.Columns>
		</DataGrid>
		<DataGrid x:Key="DataGridResourceTailEncInform" Style="{StaticResource StyleDataGrid}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="item" Binding="{Binding item}"/>
				<DataGridTextColumn Header="pattern" Binding="{Binding pattern}"/>
				<DataGridTextColumn Header="delimiter" Binding="{Binding delimiter}"/>
				<Controls:DataGridNumericUpDownColumn Header="sub_left_len" Binding="{Binding sub_left_len, Converter={StaticResource Int64ToStringConverter}}"/>
				<Controls:DataGridNumericUpDownColumn Header="sub_right_len" Binding="{Binding sub_right_len, Converter={StaticResource Int64ToStringConverter}}"/>
				<DataGridTextColumn Header="enc_pattern" Binding="{Binding enc_pattern}"/>
				<DataGridCheckBoxColumn Header="jumin_check_yn" Binding="{Binding jumin_check_yn}"/>
			</DataGrid.Columns>
		</DataGrid>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0">
			<Border BorderBrush="LightGray" BorderThickness="2"/>
			<Grid x:Name="panelOptionMenu" Margin="2">
				<TreeView Margin="3" Name="treeView"
						  SelectedItemChanged="treeView_SelectedItemChanged">
					<TreeView.ItemContainerStyle>
						<Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource MetroTreeViewItem}">
							<Setter Property="IsExpanded" Value="True" />
						</Style>
					</TreeView.ItemContainerStyle>
				</TreeView>
				<!--<TreeView x:Name="treeView">
				</TreeView>-->
			</Grid>
		</Grid>
		<Grid Grid.Column="1">
			<!--<Border BorderBrush="LightGray" BorderThickness="2"/>-->
			<ScrollViewer>
				<Grid x:Name="panel_DetailOption">
					<!--<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>-->
				</Grid>
			</ScrollViewer>
		</Grid>
	</Grid>
</UserControl>
