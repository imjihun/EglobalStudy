<Controls:MetroWindow x:Class="WpfApplication1.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
				      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      Title="MainWindow"
                      Height="600"
                      Width="800">

	<!-- your content -->
	<Grid x:Name="grid">
		<Label Content="label"
			   Margin="0,0,0,0" Width="100" Height="50"/>
		<TextBox Text="textBox"
				 Margin="0,50,0,0" Width="100" VerticalAlignment="Center"
				 Style="{DynamicResource MetroButtonTextBox}" />
		<ToggleButton Width="48"
                              Height="48"
                              Margin="4"
                              Style="{StaticResource MahApps.Metro.Styles.MetroCircleToggleButtonStyle}">
			<iconPacks:PackIconModern Width="20"
                                              Height="20"
                                              Kind="City" />
		</ToggleButton>
		<Button Content="button"
				Margin="0,100,0,0" Width="100" Height="25"/>
		<ToggleButton Content="toggle button" 
				Margin="0,150,0,0" Width="100" Height="25"/>
	</Grid>
</Controls:MetroWindow>